FROM python:3.11
WORKDIR /app
COPY --from=build-step /app/build ./build

RUN mkdir ./backend
COPY .. ./backend
RUN pip install -r ./backend/requirements.txt

EXPOSE 3000
WORKDIR /app/backend
CMD ["gunicorn", "-b", ":3000", "backend:app"]
